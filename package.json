{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "vibe-coding",
  "description": "Vibe Coding development tool",
  "type": "module",
  "private": false,
  "packageManager": "bun@1.3.9",
  "scripts": {
    "dev": "bun run --cwd packages/vibe src/index.ts",
    "typecheck": "bun turbo typecheck",
    "prepare": "husky"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "catalog": {
      "@types/bun": "1.3.9",
      "@tsconfig/bun": "1.0.9",
      "typescript": "5.8.2",
      "zod": "4.1.8",
      "@types/node": "22.13.9"
    }
  },
  "devDependencies": {
    "@tsconfig/bun": "catalog:",
    "husky": "9.1.7",
    "prettier": "3.6.2",
    "semver": "^7.6.0",
    "turbo": "2.5.6"
  },
  "dependencies": {
    "typescript": "catalog:"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/helloggx/skill"
  },
  "license": "MIT",
  "prettier": {
    "semi": false,
    "printWidth": 120
  },
  "overrides": {
    "@types/bun": "catalog:",
    "@types/node": "catalog:"
  }
}
