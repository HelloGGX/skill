{
  "name": "vibe-cli",
  "version": "1.0.0",
  "description": "Vibe Coding development tool",
  "private": false,
  "type": "module",
  "bin": {
    "vibe": "./bin/vibe"
  },
  "files": [
    "dist",
    "bin",
    "README.md"
  ],
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "bun build ./src/index.ts --outdir ./dist --target node --format esm",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "publish:snapshot": "npm version prerelease --preid=snapshot --no-git-tag-version && npm publish --tag snapshot"
  },
  "keywords": [
    "cli",
    "agent-skills",
    "skills"
  ],
  "dependencies": {
    "@clack/prompts": "^1.0.1",
    "picocolors": "^1.1.1",
    "simple-git": "^3.32.2"
  },
  "devDependencies": {
    "@types/bun": "catalog:",
    "@types/node": "catalog:",
    "typescript": "catalog:"
  }
}
